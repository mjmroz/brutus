# Set default behavior to automatically normalize line endings
* text=auto

# Force LF for text files
*.py text eol=lf
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.sh text eol=lf
Makefile text eol=lf

# Force LF for Jupyter notebooks
*.ipynb text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.h5 binary
*.hdf5 binary
*.npy binary
*.npz binary
*.dat binary
